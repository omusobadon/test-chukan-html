---
import { type CollectionEntry, getCollection, getEntry } from 'astro:content';
import DefaultLayout from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const guides = await getCollection('guides');
  const references = await getCollection('references');

  const guidePaths = guides?.map((guide) => ({
    params: { slug: guide.slug },
    props: { ...guide, collection: 'guides' },
  })) || [];

  const referencePaths = references?.map((reference) => ({
    params: { slug: reference.slug },
    props: { ...reference, collection: 'references' },
  })) || [];

  const paths = [...guidePaths, ...referencePaths];
  return paths;
}

type Props = CollectionEntry<'guides'> | CollectionEntry<'references'>;

const pageProps = Astro.props;
const { collection, slug } = pageProps;
const entry = await getEntry(collection, slug);
const { Content } = await entry.render();
---

<DefaultLayout {...entry.data}>
  <Content />
</DefaultLayout>
