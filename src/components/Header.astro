---
const { homel, docsl, membersl } = Astro.props;
---


<nav
  class="bg-white bg-opacity-50 px-2 sm:px-4 py-2.5 rounded dark:bg-gray-800 bg-fixed"
>
  <div class="container flex flex-wrap justify-between items-center mx-auto">
    <a href={homel} class="flex">
      <img
        class="w-20 md:w-16"
        src="/オムそば丼キャラ切り抜き.png"
        alt="オムそば丼マスキャラ"
      />
    </a>
    <button
      id="menu-button"
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-6 h-6"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M2.5 3.5a.5.5 0 0 1 0 1h15a.5.5 0 1 1 0-1H2.5zm0 5a.5.5 0 0 1 0 1h15a.5.5 0 1 1 0-1H2.5zm0 5a.5.5 0 0 1 0 1h15a.5.5 0 1 1 0-1H2.5z"
          clip-rule="evenodd"></path></svg
      >
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="flex flex-col p-4 mt-4 bg-gray-50 rounded-lg border border-gray-100 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
      >
        <li>
          <a
            href={homel}
            class="block py-2 pr-4 pl-3 text-gray-700 rounded md:bg-transparent md:text-gray-700 md:p-0 dark:text-white"
            aria-current="page">ホーム</a
          >
        </li>
        <li>
          <a
            href={docsl}
            class="block py-2 pr-4 pl-3 text-gray-700 rounded md:bg-transparent md:text-gray-700 md:p-0 dark:text-white"
            >Docs</a
          >
        </li>
        <li>
          <a
            href={membersl}
            class="block py-2 pr-4 pl-3 text-gray-700 rounded md:bg-transparent md:text-gray-700 md:p-0 dark:text-white"
            >メンバー詳細</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<script type="module">
  document.addEventListener('DOMContentLoaded', function () {
    const menuButton = document.getElementById('menu-button');
    const navbar = document.getElementById('navbar-default');

    menuButton.addEventListener('click', function () {
      navbar.classList.toggle('hidden');
    });
  });
</script>